<UserControl x:Class="chronON.UserControls.ChronoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:chronON.UserControls"
             mc:Ignorable="d" 
             Width="150" Height="150">

    <Grid>
        <Ellipse Stroke="Black">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#FF6496FF" Offset="1"/>
                    <GradientStop Color="#FF6480FF" Offset="0.5"/>
                    <GradientStop Color="#FFFFFFFF" Offset="0"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Fill="#FFF" Width="120" Height="120" />
        <TextBlock x:Name="ElapsedTimeText" Text="00:00:00" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="24px" Foreground="#FF190064" 
                   FontFamily="Roboto Condensed" FontWeight="Bold"/>
    </Grid>
</UserControl>
